class Test {
    field int a, b;

    // constructor: initializes the fields
    constructor Test new(int x, int y) {
        let a = x;
        let b = y;
        return this;
    }

    // method: returns the sum of the fields
    method int sum() {
        return a + b;
    }

    // main function to test
    function void main() {
        var Test t;
        var int result;

        // create object using constructor
        let t = Test.new(3, 7);

        // call method
        let result = t.sum();

        return;
    }
}